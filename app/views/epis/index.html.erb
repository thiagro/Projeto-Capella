<p id="notice"><%= notice %></p>

<h1>Epis</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Item</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Validade</th>
      <th scope="col">Obs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @epis.each do |epi| %>
      <tr>
        <td scope="row"><%= epi.item %></td>
        <td scope="row"><%= epi.quantidade %></td>
        <td scope="row"><%= epi.validade %></td>
        <td scope="row"><%= epi.obs %></td>
        <td><%= link_to 'Show', epi %></td>
        <td><%= link_to 'Edit', edit_epi_path(epi) %></td>
        <td><%= link_to 'Destroy', epi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<br>

<div class="row">
     <div class="col-12 col-md-8">
       <div class="btn btn-outline-dark">
          <%= link_to 'New Epi', new_epi_path , :class => "btn" %> 
       </div>
      </div>
      
      <div class="col-6 col-md-4"> 
        <div class="btn btn-outline-dark">
        <%= link_to 'Voltar a Home Page', root_path , :class => "btn" %> 
        </div>
      </div>
</div> 
